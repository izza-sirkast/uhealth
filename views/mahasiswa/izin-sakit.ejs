<form action="mahasiswa/izin-sakit" method="post">
  <section id="izinsakit" class="w3-container">
        <% if (messages.success) {%>
          <div class="w3-panel w3-green">
            <p><%= messages.success %></p>
          </div>
         <%}%>

    <div class="w3-row-padding">
      <div class="w3-col l6">
        <div class="w3-container w3-center">
          <h4>Data Mahasiswa</h4>
        </div>
        <div class="w3-row-padding">
          <div class="w3-col l12">
            <label>NIM</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="nim" value="<%= user.nim %>" disabled/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label>NAMA</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="nama" value="<%= user.nama %>" disabled/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label>KELAS</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="kelas" value="<%= user.kelas %>" disabled/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="klinik">KLINIK</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="klinik" id="klinik"/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="surat">SURAT SAKIT</label>
            <input class="w3-input w3-border w3-round-xlarge" type="file" id="surat"/>
          </div>
        </div>
      </div>
  
      <div class="w3-col l6">
        <div class="w3-container w3-center">
          <h4>Informasi Akademis & Diagnosis</h4>
        </div>
        <div class="w3-row-padding">
          <div class="w3-col l12">
            <label for="tanggal">TANGGAL</label>
            <input class="w3-input w3-border w3-round-xlarge" type="date" name="tanggal" id="tanggal"/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="matkul">MATAKULIAH TUJUAN</label>
            <select class="w3-select w3-border w3-round-xlarge" name="matkul" id="matkul">
              <option value="Jarkom">Jaringan Komputer</option>
          <option value="Imk">Interaksi Manusia dan Komputer</option>
          <option value="Analgo">Analisis dan Strategi Algoritma</option>
          <option value="ADBD">Analisis dan Desain Basis Data</option>
          <option value="SO">Sistem Operasi</option>
          <option value="Psd">Pengantar Sains Data</option>
          <option value="Pdsd">Pemrograman Dasar Sains Data</option>
            </select>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="dosen">DOSEN PENGAMPU</label>
            <select class="w3-select w3-border w3-round-xlarge" name="dosen" id="dosen">
              <option value="Eko">Eko Budi Setiawan S.Kom., M.T</option>
          <option value="Utami">Utami Dewi Widianti M.Kom</option>
          <option value="Chrismikha">Chrismikha Hardyanto S.Kom., M.Kom.</option>
          <option value="Gentisya">Gentisya Tri Mardiani S.Kom., M.Kom</option>
          <option value="Hanhan">Hanhan Maulana M.Kom., Ph.D</option>
          <option value="Riani">Riani Lubis S.T, M.T</option>
          <option value="Fakhrian">Fakhrian Fadlia Adiwijaya M.Kom</option>
            </select>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="penyakit">JENIS PENYAKIT</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="penyakit" id="penyakit"/>
          </div>
          <div class="w3-col l12 w3-margin-top">
            <label for="pemeriksa">DOKTER PEMERIKSA</label>
            <input class="w3-input w3-border w3-round-xlarge" type="text" name="pemeriksa" id="pemeriksa"/>
          </div>
        </div>
      </div>
    </div>
  
    <div class="w3-container w3-center">
      <button class="w3-button w3-light-grey w3-margin w3-round-xlarge" type="reset">Clear</button>
      <button class="w3-button w3-blue w3-margin w3-round-xlarge" type="submit">Kirim</button>
    </div>
  </section>
</form>